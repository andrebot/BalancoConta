@import '../../colors.styl'

.login-page
  height: 100%
  display: grid
  grid-template-areas: "top" "bottom"
  grid-template-columns: 100%
  grid-template-rows: 30% 70%

  .top-section
    // background: repeating-linear-gradient(135deg, #d1d1d1, #d1d1d1 5px, #ffffff 5px, #ffffff 10px)
    background-color: #fff
    grid-area: top

  .bottom-section
    grid-area: bottom
    background: primary900
    position: relative

    .login-wrapper
      width: 500px
      background-color: #ffffff
      border-radius: 5px
      display: grid
      box-shadow: 1px 1px 5px 0 #000
      padding: 10px
      position: absolute
      left: calc(50% - 250px)
      top: -40px

      .title
        text-align: center
        font-size: 3.25rem