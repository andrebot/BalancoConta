@import '../../colors.styl'

.button
  position: relative
  overflow: hidden
  transition: background 400ms
  color: #fff
  min-height: 32px
  background-color: primary800
  font-family: 'Roboto', sans-serif
  font-size: 0.875rem
  font-weight: 500
  outline: 0
  border: 0
  box-shadow: 0 0 0.5rem rgba(0, 0, 0, 0.3)
  cursor: pointer
  height: 100%
  width: 100%
  padding: 10px 0px

  &.disabled
    background-color: rgba(0,0,0,0.12) !important
    color: rgba(0,0,0,0.26) !important
    box-shadow: none

  &.type2
    background-color: primary50
    color: #000

    span.ripple
      background-color: rgba(0, 0, 0, 0.7)

  span.ripple
    position absolute
    border-radius: 50%
    transform: scale(0)
    animation: ripple 600ms linear
    background-color: rgba(255, 255, 255, 0.7)
    pointer-events: none
  
@keyframes ripple {
  to {
    transform: scale(4)
    opacity: 0
  }
}