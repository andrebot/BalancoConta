@import '../../colors.styl'

.form-input-wrapper
  .form-input
    height: 32px
    position: relative
    overflow: hidden

    &.error
      label
        border-bottom: 1px solid #d02626 !important

    input
      height: 100%
      width: 100%
      border: none
      padding: 7px 0 0 0
      outline: none

      &:focus 
        &+ .label-name
          & .content-name
            transform: translateY(-70%)
            font-size: 14px
            color: primary500

          &::after
            transform: translateX(0%)

      &:valid + .label-name .content-name
        transform: translateY(-70%)
        font-size: 14px

    label
      position: absolute
      bottom: 0px
      left: 0%
      width: 100%
      height: 100%
      pointer-events: none
      border-bottom: 1px solid black

      &::after
        content: ""
        position: absolute
        left: 0px
        bottom: -1px
        height: 100%
        width: 100%
        border-bottom: 2px solid primary500
        transform: translateX(-100%)
        transition: all 0.3s ease

    .content-name
      position: absolute
      bottom: 5px
      left: 0px
      transition: all 0.3s ease

  .error-message 
    min-height: 16px

    div
      color: #d02626
      font-size: 14px